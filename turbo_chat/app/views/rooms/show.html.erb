<div class="ui-card">

  <%= turbo_frame_tag "room" do %>
    <p>
      <strong>Name:</strong>
      <%= @room.name %>
    </p>

    <p>
      <%= link_to 'Edit', edit_room_path(@room) %> |
      <%= link_to 'Back', rooms_path, data: { turbo: false } %>
    </p>
  <% end %>

  <div id="messages">
    <%= render @room.messages %>
  </div>

  <%= link_to "New Message", new_room_message_path(@room) %>
  </div>